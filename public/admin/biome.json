{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"./src/components/tournamentMatch/detail/buildSingleTable.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDoubleEquals": {
					"level": "off"
				}
			},
			"style": {
				"noNonNullAssertion": {
					"level": "off"
				},
				"noVar": {
					"level": "off"
				}
			}
		}
	}
}
